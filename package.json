{
  "name": "loop-tool",
  "version": "2.0.0",
  "description": "シンプルな動画ループ作成ツール",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "obfuscate": "node obfuscate.js",
    "restore": "node restore.js",
    "rename": "node rename-builds.js",
    "build": "npm run obfuscate && electron-builder; npm run restore && npm run rename",
    "build:mac": "npm run obfuscate && electron-builder --mac; npm run restore && npm run rename",
    "build:win": "npm run obfuscate && electron-builder --win; npm run restore",
    "dev": "electron . --dev"
  },
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "javascript-obfuscator": "^4.1.1"
  },
  "build": {
    "appId": "com.developer.lop",
    "productName": "LOP",
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "LPOicon.png",
      "artifactName": "LOP-${version}-Mac-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "LPOicon.png",
      "artifactName": "LOP-${version}-Windows-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "LPOicon.png",
      "artifactName": "LOP-${version}-Linux-${arch}.${ext}",
      "target": [
        "AppImage",
        "zip"
      ]
    }
  }
}
